
function raptor_kerns_post_conf() {
    
    if [[ $dualboot == true ]];then
        echo "prepare dual boot kernel preset"
        mv /mnt/etc/mkinitcpio.d/linux-lts-dual.preset /mnt/etc/mkinitcpio.d/linux-lts.preset
        rm /mnt/etc/mkinitcpio.d/linux-lts-mono.preset
    else
        echo "prepare single boot kernel preset"
        mv /mnt/etc/mkinitcpio.d/linux-lts-mono.preset /mnt/etc/mkinitcpio.d/linux-lts.preset
        rm /mnt/etc/mkinitcpio.d/linux-lts-dual.preset
    fi
}

function raptor_kerns_post() {
    sleep 2 && clear
    echo "Kernel module configuration"
    raptor_kerns_post_conf
}