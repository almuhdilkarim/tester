
function raptor_kerns_post_grap() {

    if [[ $gpudriver == "nvidia" ]];then
        sed -i 's/^MODULES=(\([^)]*\))/MODULES=(\1 nvidia nvidia_modeset nvidia_uvm nvidia_drm)/' "/etc/mkinitcpio.d/default.conf" &&
        sudo sed -i 's/\bkms \b//g' "/etc/mkinitcpio.d/default.conf"
    fi
}


function raptor_kerns_post() {
    sleep 2 && clear
    echo "Kernel module configuration"
    raptor_kerns_post_grap
}